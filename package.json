{
	"name": "@diaspora/diaspora",
	"version": "0.3.0-alpha.13",
	"description": "Multi-Layer ORM for Javascript Client+Server",
	"files": [
		"docs",
		"dist",
		"src"
	],
	"main": "./dist/node/diaspora.esm.js",
	"browser": "./dist/browser/diaspora.iife.js",
	"module": "./dist/browser/diaspora.esm.js",
	"typings": "./dist/types",
	"directories": {
		"doc": "doc",
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/diaspora-orm/diaspora.git"
	},
	"scripts": {
		"lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts' -p tsconfig.json",
		"lint:fix": "tslint --fix -t codeFrame 'src/**/*.ts' 'test/**/*.ts' -p tsconfig.json || true",
		"doc": "typedoc --target es6 --mode file --json doc.json src",
		"prebuild": "rimraf docs dist",
		"build": "npm install --only=dev && rollup -c ./rollup.config.js --environment ENVIRONMENT:production && npm run doc",
		"build:dev": "npm install --only=dev && rollup -c ./rollup.config.js",
		"start": "rollup -c ./rollup.config.js -w",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:prod": "npm run lint && npm run test -- --coverage --no-cache",
		"deploy-docs": "ts-node tools/gh-pages-publish",
		"report-coverage": "cat ./coverage/lcov.info | coveralls",
		"commit": "git-cz",
		"semantic-release": "semantic-release pre && npm publish && semantic-release post",
		"semantic-release-prepare": "ts-node tools/semantic-release-prepare",
		"changelog": "npx conventional-changelog -p angular -i CHANGELOG.md -s",
		"version": "npm run changelog && git add CHANGELOG.md && npm run doc && git add --force docs",
		"prepack": "npm run build"
	},
	"keywords": [
		"ORM",
		"db",
		"collection",
		"manager",
		"localstorage",
		"webstorage",
		"models",
		"mvc",
		"query",
		"object"
	],
	"author": "Gerkin",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/diaspora-orm/diaspora/issues"
	},
	"homepage": "https://github.com/diaspora-orm/diaspora#readme",
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		},
		"validate-commit-msg": {
			"types": "conventional-commit-types",
			"helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
		}
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"roots": [
			"test/unit-test"
		],
		"coverageThreshold": {
			"global": {
				"branches": 70,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		},
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}"
		],
		"globals": {
			"ts-jest": {
				"tsConfigFile": "test/tsconfig.test.json"
			}
		},
		"setupTestFrameworkScriptFile": "./test/unit-test/setup.ts",
		"testURL": "http://localhost/"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"@types/express": "^4.16.0",
		"@types/jest": "^23.3.1",
		"@types/lodash": "^4.14.116",
		"@types/logform": "^1.2.0",
		"@types/node": "^10.7.0",
		"@types/request-promise": "^4.1.42",
		"commitizen": "^2.10.1",
		"conventional-changelog-cli": "^2.0.1",
		"coveralls": "^3.0.2",
		"cz-conventional-changelog": "^2.1.0",
		"express": "^4.16.3",
		"intercept-stdout": "^0.1.2",
		"jest": "^23.5.0",
		"jest-extended": "^0.11.0",
		"rimraf": "^2.6.2",
		"rollup": "^0.66.0",
		"rollup-plugin-babel": "^4.0.3",
		"rollup-plugin-commonjs": "^9.1.5",
		"rollup-plugin-jscc": "^0.3.3",
		"rollup-plugin-json": "^3.1.0",
		"rollup-plugin-node-resolve": "^3.3.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^3.0.0",
		"rollup-plugin-typescript2": "^0.17.0",
		"semantic-release": "^15.9.15",
		"ts-jest": "^23.1.3",
		"tslint": "^5.11.0",
		"tslint-config-standard": "^8.0.1",
		"typedoc": "^0.12.0",
		"typescript": "3.0.1",
		"validate-commit-msg": "^2.14.0",
		"validate-npm-package-name": "^3.0.0",
		"xmlhttprequest": "^1.8.0"
	},
	"dependencies": {
		"lodash": "^4.17.11",
		"request": "^2.88.0",
		"request-promise": "^4.2.2",
		"sequential-event": "^0.4.4",
		"winston": "^3.0.0",
		"logform": "^1.10.0"
	},
	"engines": {
		"node": ">=7.0.0"
	}
}
