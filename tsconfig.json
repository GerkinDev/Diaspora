{
	"compilerOptions": {
		"target": "esnext",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,

		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"es7",
			"esnext",
			"dom"
		],
		"watch": true,
		"outDir": "./transtyped"
	},
	"typeRoots": [
		"./node_modules/@types",
		"./typings"
	],
	"types": [
		"winston",
		"diaspora"
	]
}